{
  "name": "excel-to-invoice",
  "version": "1.0.0",
  "private": true,
  "description": "Transform Excel files into professional PDF invoices in bulk",
  "keywords": [
    "invoice",
    "pdf",
    "excel",
    "generator",
    "bulk",
    "automation"
  ],
  "license": "SEE LICENSE FILE",
  "author": "Sayed Mowafi <sayed@sayedmowafi.dev>",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:api\" \"npm run dev:web\"",
    "dev:api": "npm run dev --workspace=@excel-to-invoice/api",
    "dev:web": "npm run dev --workspace=@excel-to-invoice/web",
    "build": "npm run build --workspaces --if-present",
    "build:api": "npm run build --workspace=@excel-to-invoice/api",
    "build:web": "npm run build --workspace=@excel-to-invoice/web",
    "start": "npm run start --workspace=@excel-to-invoice/api",
    "lint": "npm run lint --workspaces --if-present",
    "lint:fix": "npm run lint:fix --workspaces --if-present",
    "typecheck": "npm run typecheck --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present && rm -rf node_modules",
    "docker:dev": "docker-compose -f docker/docker-compose.yml -f docker/docker-compose.dev.yml up",
    "docker:build": "docker-compose -f docker/docker-compose.yml build",
    "docker:up": "docker-compose -f docker/docker-compose.yml up -d",
    "docker:down": "docker-compose -f docker/docker-compose.yml down"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
